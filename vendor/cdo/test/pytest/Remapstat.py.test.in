#! @PYTHON@

from cdoTest import *

HAS_THREADS=cdo_check_req("has-threads")

FORMAT="-f srv -b 32"
OPERATORS=["remapmin","remapmax","remaprange","remapsum","remapavg","remapmean","remapstd","remapstd1","remapvar","remapvar1","remapskew","remapkurt","remapmedian"]

test_module=TestModule()

SRCGRIDS=["global_2", "global_5", "global_5"]
TGTGRIDS=["global_5", "global_2", "global_5"]
for SRCGRID,TGTGRID in zip(SRCGRIDS,TGTGRIDS):
    for OPERATOR in OPERATORS:
        if (not HAS_THREADS):
            test_module.add_skip("POSIX threads not enabled")
            continue

        OFILE=f'temp_{OPERATOR}_{SRCGRID}_to_{TGTGRID}_res'
        RFILE=f'{DATAPATH}/temp_{OPERATOR}_{SRCGRID}_to_{TGTGRID}_ref'

        t=TAPTest(f'{OPERATOR}  {SRCGRID} to {TGTGRID}')
        t.add(f'{CDO}  {FORMAT} {OPERATOR},{TGTGRID} -temp,{SRCGRID} {OFILE}')
        t.add(f'{CDO} diff,abslim=0.004 {OFILE} {RFILE}')
        t.clean(OFILE)
        test_module.add(t)

test_module.run()
